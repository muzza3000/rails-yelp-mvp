<div class="container">
  <div class="restaurant py-3">
    <h2><i class="fas fa-utensils"></i> <%= @restaurant.name %></h2>
    <p><i class="far fa-address-card"></i> <%= @restaurant.address %></p>
    <p><i class="fas fa-phone"></i> <%= @restaurant.phone_number %></p>
    <p><i class="fas fa-layer-group"></i> <%= @restaurant.category %></p>
  </div>
  <%= link_to 'New Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
  <div class="py-5">

  <% @restaurant.reviews.each do |review| %>
    <div class="review py-2">
      <p>
        <i class="far fa-star"></i>
        <%= review.rating %>
        <%= review.content %>
      </p>
    </div>
  <% end %>
  </div>
</div>


